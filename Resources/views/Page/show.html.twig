{% extends template %}

{% block stylesheets %}
	{{parent()}}
	{% if (can_edit) %}
	<meta name="mercury-images" content="{{path('koala_content_mercury_images')}}"/>
	<meta name="mercury-content" content="{{path('koala_content_mercury_content', {'url': page.url})}}">
	<script src="{{asset('mercury/javascripts/mercury_loader.js')}}?visible=false&pack=bundled&src={{asset('mercury')}}" type="text/javascript" charset="utf-8"></script>
	{% endif %}
{% endblock %}

{% block javascripts %}
	{{parent()}}
	{% if (can_edit) %}
	<script src="{{asset('bundles/koalacontent/mercury.js')}}" type="text/javascript" charset="utf-8"></script>
	{% endif %}
{% endblock %}
